<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kiccheavenx.dao.SysRoleMapper">
    <resultMap id="roleMap" type="com.kiccheavenx.domain.entity.SysRole">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="status" column="status" />
        <result property="desc" column="_desc" />
    </resultMap>
    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role(name, status, _desc)
        VALUES(#{name},#{status},#{desc})
    </insert>
    <update id="updateByIdRole">
        update sys_role set
        name = #{name}, status = #{status}, _desc = #{desc}
        where id = #{id}
    </update>
    <delete id="deleteByIdRole">
        delete from sys_role where id = #{id}
    </delete>
    <select id="selectByIdRole" resultMap="roleMap">
        select id, name, status, _desc from sys_role where id = #{id};
    </select>
    <select id="selectAll" resultMap="roleMap">
        select id, name, status, _desc from sys_role;
    </select>
</mapper>