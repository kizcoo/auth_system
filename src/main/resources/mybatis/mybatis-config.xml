<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<!--    引入外部配置文件 -->
    <properties resource="classpath:db.properties" />

    <settings>
<!--        指定使用LOG4J输出日志 -->
        <setting name="logImpl" value="LOG4J" />
<!--        显式开启全局缓存 -->
        <setting name="cacheEnabled" value="true" />
<!--        是否自动开启驼峰命名规则映射 -->
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>

    <typeAliases>
<!--        配置包的别名，在使用类时不需要写包名的部分 -->
        <package name="com.kiccheavenx.domain.entity" />
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <property name="" value="" />
            </transactionManager>
<!--            配置连接池 -->
            <dataSource type="POOLED">
                <property name="driver" value="${driver}" />
                <property name="url" value="${url}" />
                <property name="username" value="${username}" />
                <property name="password" value="${password}" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mybatis/mapper/SysApiMapper.xml" />
        <mapper resource="mybatis/mapper/SysPageFunctionMapper.xml" />
        <mapper resource="mybatis/mapper/SysPageMapper.xml" />
        <mapper resource="mybatis/mapper/SysRoleMapper.xml" />
        <mapper resource="mybatis/mapper/SysUserMapper.xml" />
    </mappers>
</configuration>
